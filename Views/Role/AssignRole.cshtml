@model HotelMangementSystem.ViewModels.AssignRoleModel

@{
    ViewData["Title"] = "AssignRole";
    Layout = "_CustomeLayout";

    //ViewBag.UserAndRoles.Users
    SelectList users = new SelectList(ViewBag.UserAndRoles.Users,"Id","UserName");
    SelectList roles = new SelectList(ViewBag.UserAndRoles.Roles,"Name","Name");

}


<div class="hero-wrap" style="background-image: url('/images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    @* <p class="breadcrumbs mb-2"><span class="mr-2"><a href="index.html">Home</a></span> <span class="mr-2"><a href="hotels.html">Hotels</a></span> <span>Hotel Name</span></p> *@
                    <h1 class="mb-4 bread">Assign Role</h1>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.RoleAdded != null && ViewBag.RoleAdded == true)
{
    <div class="alert alert-success"> Role has been assigned successfully</div>
}
@if (ViewBag.RoleNotAdded != null && ViewBag.RoleNotAdded == true)
{
    <div class="alert alert-danger">An error was occured</div>
}
<div class="row">
    <div class="col-1 col-sm-1 col-md-3"></div>
    <div class="col-10 col-sm-10 col-md-6 mt-5 me-5">
        <form asp-action="AssignRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                <select class="form form-control"
                        name="UserId" id="UserId"
                        asp-items="users">
                    <option value="0">--- Select User ---</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <select class="form form-control"
                        name="RoleName" id="RoleName"
                        asp-items="roles">
                    <option value="0">--- Select Role ---</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
