@model HotelMangementSystem.ViewModels.NewRoleViewModel

@{
    ViewData["Title"] = "AddNewRole";
    Layout = "_CustomeLayout";

}




<div class="hero-wrap" style="background-image: url('/images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    @* <p class="breadcrumbs mb-2"><span class="mr-2"><a href="index.html">Home</a></span> <span class="mr-2"><a href="hotels.html">Hotels</a></span> <span>Hotel Name</span></p> *@
                    <h1 class="mb-4 bread">Add New Role</h1>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.success != null && ViewBag.success == true)
{
    <div class="alert alert-success">New role has been added successfully</div>
}
@if (ViewBag.fail != null && ViewBag.fail == true)
{
    <div class="alert alert-danger">Role is already exists</div>
}
<div class="row">
    <div class="col-1 col-sm-1 col-md-3"></div>
    <div class="col-10 col-sm-10 col-md-6 mt-5 me-5">
        <form asp-action="AddNewRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

